<div class = "bodytitle">
  <h2>スケジュール編集</h2>
</div>
 
 <%= render "shared/error", obj: @user %>
 <%= form_with model: @user do |f| %>
 
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :start_at ,"開始日" %></th>
       <td><%= f.date_field :start_at %></td>
     </tr>
 
     <tr>
       <th><%= f.label :finish ,"終了日" %></th>
       <td><%= f.date_field :finish  %></td>
     </tr>
 
     <tr>
       <th><%= f.label :alltime ,"終日" %></th>
       <td><%= f.check_box :alltime %><br>終日の場合はチェックを入れます</td>
     </tr>
   
     <tr>
       <th><%= f.label :onememo ,"スケジュールメモ" %></th>
       <td><%= f.text_area :onememo %></td>
     </tr>
   </table>
   
   <div>
     <ul>
       <li><%= f.submit "スケジュールの編集を完了する"%></li>
       <li><%= link_to "スケジュール一覧に戻る", :users %></li>
     </ul>
   </div>
 <% end %>