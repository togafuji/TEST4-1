<div class = "bodytitle">
  <h2>スケジュール一覧</h2>
</div>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>

 <table>
   <thead>
     <tr>
       <th>ID</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>スケジュール更新日時</th>
       <th>確認</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>
 
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= user.id %></td>
         <td><%= user.title %></td>
         <td><%= user.start_at.strftime('%Y年%m月%d日') if user.start_at %></td>
         <td><%= user.finish.strftime('%Y年%m月%d日') if user.finish %></td>
         <td><% if user.alltime == true %>◯<% else %><% end %></td>
         <td><%= user.updated_at.to_s(:datetime_jp) %></td>
         <td>
         <%= link_to "確認", user %>
         </td>
         <td>
         <%= link_to "編集", [:edit, user] %>
         </td>
         <td>
         <%= button_to "削除", user, method: :delete, form: { data: { turbo_confirm: "本当に削除しますか" } } %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <p class = "linkindex"><%= link_to "スケジュール新規登録", :new_user %></p>